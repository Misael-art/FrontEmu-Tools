{
  "system": {
    "enabled": true,
    "version": "1.0.0",
    "auto_start": true,
    "debug_mode": false
  },
  "database": {
    "path": "history_data/database/history.db",
    "backup_interval_hours": 24,
    "cleanup_days": 90,
    "max_size_mb": 500
  },
  "monitoring": {
    "metrics_interval_seconds": 60,
    "change_detection_enabled": true,
    "performance_tracking": true,
    "file_watch_enabled": true
  },
  "backup": {
    "enabled": true,
    "interval_hours": 6,
    "max_backups": 10,
    "compression_enabled": true,
    "incremental_enabled": true,
    "backup_directory": "history_data/backups"
  },
  "reports": {
    "auto_generate": true,
    "generation_interval_hours": 24,
    "output_directory": "history_data/reports",
    "templates_directory": "history_data/templates",
    "formats": ["html", "json"],
    "retention_days": 30
  },
  "change_tracking": {
    "watch_directories": [
      "config/",
      "src/",
      "gui/",
      "cache/",
      "scripts/"
    ],
    "ignore_patterns": [
      "*.tmp",
      "*.log",
      "*.pyc",
      "__pycache__/",
      ".git/",
      "node_modules/",
      "*.bak"
    ],
    "track_file_content": true,
    "calculate_checksums": true
  },
  "performance": {
    "cpu_threshold_percent": 80,
    "memory_threshold_percent": 85,
    "disk_threshold_percent": 90,
    "response_time_threshold_ms": 5000,
    "alert_enabled": true
  },
  "integration": {
    "validation_service": {
      "enabled": true,
      "hook_events": ["config_change", "file_change", "performance_alert"]
    },
    "external_apis": {
      "enabled": false,
      "endpoints": []
    }
  },
  "logging": {
    "level": "INFO",
    "file_path": "history_data/logs/history_system.log",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "security": {
    "encrypt_sensitive_data": false,
    "access_control_enabled": false,
    "audit_trail": true
  },
  "ui": {
    "dashboard_enabled": true,
    "real_time_updates": true,
    "chart_refresh_seconds": 30,
    "theme": "default"
  },
  "advanced": {
    "parallel_processing": true,
    "max_worker_threads": 4,
    "cache_enabled": true,
    "cache_size_mb": 100,
    "batch_processing": true,
    "batch_size": 100
  }
}